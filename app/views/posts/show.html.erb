<div class='columns px-5 pt-5'>
  <div class='column is-three-fifths'>
    <div id='feed_card' class='card has-background-black has-text-white px-5 pt-5 pb-5'>
      <div class='card-header'>
        <div class="card-image">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
          </figure>
        </div>
        <p class='card-header-title has-text-white'>
          <%= @post.user.email %>
        </p>

      </div>  
      <div class='card-content'>
        <p>
          <%= @post.body %>
        </p>
        <p class='has-text-primary-light'>
          <%= @post.created_at%>
        </p>
      </div>
      <div class='card-footer has-text-success'>
        <div class='card-footer-item'>
        <% if current_user.liked_posts.include?(@post) %>
          <p>liked: </p>
        <% else %>
          <p>like this: </p>
        <% end %>
        <p class='has-text-danger'>likes: <%= @post.post_likes.count %></p>
        </div>
      </div>  
    </div>
    <% @post.comments.each do |c| %>
    <nav class='level'>
    </nav>
    <div class='card has-text-white has-background-black'>
      <div class='card-header'>
        <div class="card-image">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
          </figure>
        </div>
        <p class='card-header-title has-text-white'>
          <%= c.user.email %>
        </p>
      </div>  
      <div class='card-content'>
        <p><%= c.body %></p>
      </div>  
    </div>
    <% end %>
  </div>
</div>


