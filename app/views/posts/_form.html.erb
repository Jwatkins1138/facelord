<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
    <div class='field'>
      <div class='control'>
        <%= f.input :body, label: 'new post', input_html: {class: 'textarea '},
                    wrapper: false, label_html: {class: 'label'},
                    placeholder: 'type your post here...' %>
      </div>
    </div>
    <%= f.button :submit, class: 'button is-info' %> 
<% end %>       