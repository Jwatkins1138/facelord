
<%= simple_form_for(@user) do |f| %>
  <div class='field'>
    <div class='control'>
    <%= f.input :name,
                autofocus: true,
                input_html: { class: 'input' },
                wrapper: false,
                label: false,
                placeholder: 'name' %>
                
    </div>
  </div>    
  <div class='field'>
    <div class='control'>
    <%= f.input :bio,
                input_html: { class: 'textarea ' },
                wrapper: false,
                label: false,
                placeholder: 'bio'  %>
    </div>
  </div>  
  <div class='field'>
    <div class='control'>
    <%= f.input :location,
                autofocus: true,
                input_html: { class: 'input' },
                wrapper: false,
                label: false,
                placeholder: 'location' %>
                
    </div>
  </div>
  <div class='field'>
    <div class='control'>
    <%= f.input :company,
                autofocus: true,
                input_html: { class: 'input' },
                wrapper: false,
                label: false,
                placeholder: 'company' %>
                
    </div>
  </div>
  <div class='field'>
    <div class='control'>
    <%= f.input :birthday,
                autofocus: true,
                input_html: { class: 'date' },
                start_year: Date.today.year - 125,
                wrapper: false,
                label: false,
                placeholder: 'birthday' %>
                
    </div>
  </div>
  <div class='field'>
    <div class='control'>  
    <%= f.button :submit, "update", class: 'button is-primary' %>
    </div>
  </div>  
<% end %>
