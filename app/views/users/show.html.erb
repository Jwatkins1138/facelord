<section class='hero is-link' >
  <div class='hero-head'>
    <figure class="image is-128x128">
      <img src="https://bulma.io/images/placeholders/64x64.png" alt="Placeholder image">
    </figure>
    <p class='title'>
      <%= @user.name %>
    </p>
    <p class='subtitle'>
      <%= @user.email %>
    </p>
  </div>
</section>
<div class='columns px-5 pt-5 '>
  <% if @user == current_user %>
  <div class='level'>
  </div>
  <div class='column is-two-fifths has-background-black has-text-success px-5'>
    <%= render 'left' %>
  </div>
  <div class='column has-background-black has-text-success px-5'>
    <%= render 'profile' %>
  </div>
  
  <% else %>
  <div class='level'>
  </div>
  <div class='column'>
    <%= @user.email %>
  </div>
  <div class='column is-three-fifths'>
    <%= @user.email %>
  </div>
  <div class='column'>
    <%= @user.email %>
  </div>
  <% end %>
</div>